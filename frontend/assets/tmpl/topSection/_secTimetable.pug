mixin session(sessionInfo)
    .section
        .session.inner
            div(class="room"+" "+sessionInfo.room)
                .name Room
                .val=sessionInfo.track
            h2=sessionInfo.title
            .text
                p.show !{sessionInfo.summary01}
                p.more !{sessionInfo.summary02}
            if sessionInfo.summary02
                .readmore READ MORE
            else
                div(style="height:18px")
        .speaker.inner
            .profile
                .icon
                    img(src="/assets/speakers/" + sessionInfo.img)
                .name
                    p=sessionInfo.name
            .detail.more
                .text
                    p !{sessionInfo.profile}
                .sns
                    if sessionInfo.twitter
                        .twitter: a(href=sessionInfo.twitter, title="title", target="_blank")
                            i.fa.fa-twitter
                    if sessionInfo.facebook
                        .facebook: a(href=sessionInfo.facebook, title="title", target="_blank")
                            i.fa.fa-facebook
                    if sessionInfo.github
                        .gitHub: a(href=sessionInfo.github, title="title")
                            i.fa.fa-github
                    if sessionInfo.other
                        .other: a(href=sessionInfo.other, title="title")
                            i.fa.fa-link

            .readmore READ MORE

